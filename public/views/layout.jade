doctype html
html(ng-app="kknApp")
	head
		title = title
		link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.css.map')
		link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap-theme.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap-theme.css.map')
		link(rel='stylesheet', href='/stylesheets/master.css')
		link(rel='stylesheet', href='/stylesheets/shop-homepage.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='/javascripts/libs/angular/angular.js')
		script(src='/javascripts/libs/angular/angular-resource.js')
		script(src='/javascripts/libs/angular/angular-route.js')
		script(src='/javascripts/libs/angular/angular-ui-route.js')
		script(src='/javascripts/libs/jquery/jquery-2.1.1.js')
		script(src='/javascripts/libs/bootstrap/bootstrap.js')
		script(src='/javascripts/libs/bootstrap/bootstrap.min.js')
		script(src='/javascripts/libs/bootstrap/ui-bootstrap-tpls-0.12.1.min.js')
		script(src='/javascripts/app.js')
		script(src='/javascripts/services.js')
		script(src='/javascripts/controllers.js')
		script(src='/javascripts/filters.js')
		script(src='/javascripts/directives.js')
	body(ng-controller='MainController')
		div(class="header")
			nav(class="navbar navbar-inverse navbar-fixed-top" role="navigation")					
				div(class="container")
					div(class="navbar-header")
						button(class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
							span(class="sr-only") Toggle Navigation
							span(class="icon-bar")
							span(class="icon-bar")
							span(class="icon-bar")
						a(class="navbar-brand" href="#") Kingdom Kidz Nursery
					div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
						ul(class="nav navbar-nav" ng-repeat="item in menu")
							li
								a(href="{{item.url}}") {{item.text}}
			br
			br
		div(id="container_body" class="container")
			div(class="row")
				div(class="col-md-2")
					div(class="main-menu-list-group" ng-repeat="item in menu")
						a(href="{{item.url}}" class="btn btn-block btn-large btn-primary") {{item.text}}
				div(class="col-md-10")
					block content